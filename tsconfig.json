{
  "compilerOptions": {
    "outDir": "./build",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "target": "es2020",
    "module": "es2020",
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
